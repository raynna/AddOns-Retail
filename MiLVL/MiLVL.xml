<Ui>
	<Frame name="MiLVL_MainFrame"
         enableMouse="true"
         movable="true">
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Size>
			<AbsDimension x="160" y="20" />
		</Size>
		<Backdrop 	bgFile="Interface\Tooltips\UI-Tooltip-Background" 
				edgeFile="Interface\Tooltips\UI-Tooltip-Border"
				title="true">
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
			<TileSize>
				<AbsValue val="16" />
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="4" right="3" top="4" bottom="3" />
			</BackgroundInsets>
			<Color r="0.2" g="0.2" b="0.2" a="0.7" />	
		</Backdrop>
		<Frames>
			<Button name="$parent_Button">
				<Size>
					<AbsDimension x="15" y="15" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" />
					<Offset>
						<AbsDimension x="3" y="3" />
					</Offset>
				</Anchors>
        <NormalTexture file="Interface\Minimap\TRACKING\OBJECTICONS">
          <TexCoords left="0" right="0.125" top="0" bottom="0.5" /> 
        </NormalTexture>
        <HighlightTexture file="Interface\Minimap\TRACKING\OBJECTICONS">
          <TexCoords left="0.125" right="0.25" top="0" bottom="0.5" />
        </HighlightTexture>
			</Button>
		</Frames>
    <Layers>
      <Layer level="ARTWORK">
        <FontString name="$parent_CurrentiLVL"
                    inherits="SystemFont_Small"
                    text="0"
                    justifyV="TOP"
                    justifyH="RIGHT">
          <Size>
            <AbsDimension x="0" y="10" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT"
                    relativeTo="$parent_CurrentiLVL"
                    relativePoint="TOPRIGHT"/>
            <Offset>
              <AbsDimension x="0" y="-5" />
            </Offset>
          </Anchors>
          <Color r="1" g="1" b="0" a="1" />
        </FontString>
        <FontString name="$parent_EstimatediLVL"
                    inherits="SystemFont_Small"
                    text="0"
                    justifyV="TOP"
                    justifyH="RIGHT">
          <Size>
            <AbsDimension x="0" y="10" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT"
                    relativeTo="$parent_CurrentiLVL"
                    relativePoint="TOPRIGHT"/>
            <Offset>
              <AbsDimension x="20" y="-5" />
            </Offset>
          </Anchors>
          <Color r="1" g="0" b="0" a="1" />
        </FontString>
      </Layer>
    </Layers>

    <Scripts>
      <Onload>
        MiLVL_OnLoad()
      </Onload>
      <OnEvent>
        MiLVL_OnEvent()
      </OnEvent>
      <OnUpdate>
        MiLVL_OnUpdate()
      </OnUpdate>
    </Scripts>

</Ui>